        <!-- 新增：测试 Activity（设为启动页） -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ucw.beatu.business.landscape.presentation.ui.LandscapeActivity"
            android:exported="false" />

        <activity
            android:name="com.ucw.beatu.business.settings.presentation.ui.SettingsTestActivity"
            android:exported="false"
            android:label="@string/app_name" />

        <!-- FileProvider: 用于分享生成的图片（封面 + 二维码海报） -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.ucw.beatu.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>