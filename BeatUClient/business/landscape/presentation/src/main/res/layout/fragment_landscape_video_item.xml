<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 播放器 -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false" />

    <!-- 横屏控制面板（半透明覆盖层，可显示/隐藏） -->
    <FrameLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <!-- 顶部控制栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_gravity="top">

            <!-- 退出全屏按钮 -->
            <ImageButton
                android:id="@+id/btn_exit_fullscreen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="退出全屏" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- 倍速按钮 -->
            <TextView
                android:id="@+id/btn_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0x"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="16dp" />

            <!-- 清晰度按钮 -->
            <TextView
                android:id="@+id/btn_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高清"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="16dp" />

            <!-- 锁屏按钮 -->
            <ImageButton
                android:id="@+id/btn_lock"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_lock_idle_lock"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="锁定屏幕" />
        </LinearLayout>

        <!-- 底部交互按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="end|center_vertical"
            android:gravity="center">

            <!-- 亮度按钮 -->
            <ImageButton
                android:id="@+id/btn_brightness"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_view"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="亮度"
                android:layout_marginBottom="16dp" />

            <!-- 音量按钮 -->
            <ImageButton
                android:id="@+id/btn_volume"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_lock_silent_mode"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="音量"
                android:layout_marginBottom="16dp" />

            <!-- 点赞 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btn_like"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/btn_star_big_off"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#FFFFFF"
                    android:contentDescription="点赞" />

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- 收藏 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btn_favorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/star_big_off"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#FFFFFF"
                    android:contentDescription="收藏" />

                <TextView
                    android:id="@+id/tv_favorite_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- 评论 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btn_comment"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#FFFFFF"
                    android:contentDescription="评论" />

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- 分享 -->
            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_share"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="分享" />
        </LinearLayout>

        <!-- 亮度条（左侧） -->
        <LinearLayout
            android:id="@+id/brightness_indicator"
            android:layout_width="4dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="16dp"
            android:background="#40FFFFFF"
            android:visibility="gone">

            <View
                android:id="@+id/brightness_progress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF" />
        </LinearLayout>

        <!-- 音量条（右侧） -->
        <LinearLayout
            android:id="@+id/volume_indicator"
            android:layout_width="4dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:background="#40FFFFFF"
            android:visibility="gone">

            <View
                android:id="@+id/volume_progress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF" />
        </LinearLayout>

        <!-- 进度条（中央，水平滑动时显示） -->
        <LinearLayout
            android:id="@+id/seek_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="24dp"
            android:background="#80000000"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_seek_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 / 00:00"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <ProgressBar
                android:id="@+id/progress_seek"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:progress="0"
                android:progressTint="#FFFFFF" />
        </LinearLayout>
    </FrameLayout>

    <!-- 解锁按钮（锁屏时显示） -->
    <ImageButton
        android:id="@+id/btn_unlock"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_lock_idle_unlock"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#FFFFFF"
        android:contentDescription="解锁"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
