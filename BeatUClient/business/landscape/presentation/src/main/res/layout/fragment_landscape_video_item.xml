<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 播放器 -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false" />

    <!-- 横屏控制面板（半透明覆盖层，可显示/隐藏） -->
    <FrameLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <!-- 顶部控制栏：右上角评论和分享（无需重复返回按钮） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_gravity="top">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- 右上角：评论和分享 -->
            <ImageButton
                android:id="@+id/btn_comment"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/selector_comment"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="评论"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/selector_share"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="分享" />
        </LinearLayout>

        <!-- 右侧垂直功能栏：亮度、锁定、音量 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="end|center_vertical"
            android:gravity="center">

            <!-- 亮度按钮 -->
            <ImageButton
                android:id="@+id/btn_brightness"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/selector_brightness"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="亮度"
                android:layout_marginBottom="16dp" />

            <!-- 锁定/解锁按钮 -->
            <ImageButton
                android:id="@+id/btn_lock"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/selector_screen_lock"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="锁定屏幕"
                android:layout_marginBottom="16dp" />

            <!-- 音量按钮 -->
            <ImageButton
                android:id="@+id/btn_volume"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/selector_volume"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="音量" />
        </LinearLayout>

        <!-- 底部控制区域：进度条 + 左侧喜欢/收藏 + 右侧倍速/清晰度 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent">

            <!-- 进度条 -->
            <ProgressBar
                android:id="@+id/progress_video"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:max="100"
                android:progress="0"
                android:progressTint="#2196F3"
                android:progressBackgroundTint="#80FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- 底部按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 左侧：喜欢和收藏 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 喜欢 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp">

                        <ImageButton
                            android:id="@+id/btn_like"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/selector_like"
                            android:scaleType="centerInside"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="点赞" />

                        <TextView
                            android:id="@+id/tv_like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <!-- 收藏 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/btn_favorite"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/selector_favorite"
                            android:scaleType="centerInside"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="收藏" />

                        <TextView
                            android:id="@+id/tv_favorite_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- 右侧：倍速和清晰度按钮 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 倍速按钮 -->
                    <TextView
                        android:id="@+id/btn_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="倍速"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/bg_button_border"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="12dp" />

                    <!-- 清晰度按钮 -->
                    <TextView
                        android:id="@+id/btn_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清晰度"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/bg_button_border"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 亮度条（左侧） -->
        <FrameLayout
            android:id="@+id/brightness_indicator"
            android:layout_width="48dp"
            android:layout_height="180dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_indicator_track"
            android:padding="8dp"
            android:visibility="gone">

            <View
                android:id="@+id/brightness_progress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_indicator_fill" />

            <TextView
                android:id="@+id/tv_brightness_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="50%"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="12sp" />
        </FrameLayout>

        <!-- 音量条（右侧） -->
        <LinearLayout
            android:id="@+id/volume_indicator"
            android:layout_width="4dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:background="#40FFFFFF"
            android:visibility="gone">

            <View
                android:id="@+id/volume_progress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF" />
        </LinearLayout>

        <!-- 进度条（中央，水平滑动时显示） -->
        <LinearLayout
            android:id="@+id/seek_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="24dp"
            android:background="#80000000"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_seek_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 / 00:00"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <ProgressBar
                android:id="@+id/progress_seek"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:progress="0"
                android:progressTint="#FFFFFF" />
        </LinearLayout>
    </FrameLayout>

    <!-- 解锁按钮（锁屏时显示） -->
    <ImageButton
        android:id="@+id/btn_unlock"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/selector_screen_unlock"
        android:scaleType="centerInside"
        android:padding="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#FFFFFF"
        android:contentDescription="解锁"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
