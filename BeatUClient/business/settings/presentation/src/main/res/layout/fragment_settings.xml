<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="@string/settings_back"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="设置"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/settings_text_primary"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp" />

        </LinearLayout>

        <!-- AI 开关分组 -->
        <TextView
            android:id="@+id/group_ai_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI 开关"
            android:textSize="14sp"
            android:textColor="@color/settings_text_secondary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/settings_card_bg"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/item_ai_search"
                    layout="@layout/item_settings_switch" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_settings"
                    android:layout_marginStart="56dp" />

                <include
                    android:id="@+id/item_ai_comment"
                    layout="@layout/item_settings_switch" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 播放设置分组 -->
        <TextView
            android:id="@+id/group_play_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="播放设置"
            android:textSize="14sp"
            android:textColor="@color/settings_text_secondary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/settings_card_bg"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/item_auto_play"
                    layout="@layout/item_settings_switch" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_settings"
                    android:layout_marginStart="56dp" />

                <include
                    android:id="@+id/item_speed"
                    layout="@layout/item_settings_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_settings"
                    android:layout_marginStart="56dp" />

                <include
                    android:id="@+id/item_quality"
                    layout="@layout/item_settings_arrow" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 关于分组 -->
        <TextView
            android:id="@+id/group_about_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关于"
            android:textSize="14sp"
            android:textColor="@color/settings_text_secondary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/settings_card_bg"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <include
                android:id="@+id/item_about"
                layout="@layout/item_settings_arrow" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
