<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000">

    <!-- 视频播放区域 -->
    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FF000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_interaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 视频占位图 -->
        <ImageView
            android:id="@+id/iv_video_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="视频占位图" />

        <!-- 上方字幕 -->
        <TextView
            android:id="@+id/tv_subtitle_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="浪人究竟是为何 要拿竹刀这般折磨自己?"
            android:textSize="16sp"
            android:textColor="#FFFFFFFF"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:background="#80000000"
            android:layout_gravity="top" />

        <!-- 播放按钮 -->
        <ImageView
            android:id="@+id/iv_play_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_play_button"
            android:contentDescription="播放"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center" />

        <!-- 下方字幕 -->
        <TextView
            android:id="@+id/tv_subtitle_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="然后毫不犹豫径直捅向自己的腹部"
            android:textSize="16sp"
            android:textColor="#FFFFFFFF"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:background="#80000000"
            android:layout_gravity="bottom"
            android:layout_marginBottom="200dp" />

    </FrameLayout>

    <!-- 底部信息栏 -->
    <LinearLayout
        android:id="@+id/bottom_interaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#FF000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 集数信息行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_episode_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3集"
                android:textSize="18sp"
                android:textColor="#FFFFEB3B"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_fullscreen"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_crop"
                android:tint="#FFFFFFFF"
                android:contentDescription="全屏"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- 合集信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_media_play"
                android:tint="#FF2196F3"
                android:contentDescription="合集" />

            <TextView
                android:id="@+id/tv_collection_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合集:切腹 共2集"
                android:textSize="14sp"
                android:textColor="#FF2196F3"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- 视频标题和标签 -->
        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="《切腹》1/2上集:浪人为何要用竹刀这般折磨自己?# 影视解说#动作冒险"
            android:textSize="14sp"
            android:textColor="#FFFFFFFF"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- 频道信息和互动按钮行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 频道信息 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 频道头像 -->
                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/iv_channel_avatar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_avatar_placeholder"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_avatar_circle" />

                </FrameLayout>

                <!-- 频道名称 -->
                <TextView
                    android:id="@+id/tv_channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="云哥讲电影"
                    android:textSize="14sp"
                    android:textColor="#FFFFFFFF" />

            </LinearLayout>

            <!-- 互动按钮组 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 点赞 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/btn_star_big_on"
                        android:tint="#FFFFFFFF"
                        android:contentDescription="点赞"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="535"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />

                </LinearLayout>

                <!-- 分享 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_share"
                        android:tint="#FFFFFFFF"
                        android:contentDescription="分享"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/tv_share_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="59"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />

                </LinearLayout>

                <!-- 收藏 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/iv_favorite"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/star_big_on"
                        android:tint="#FFFFFFFF"
                        android:contentDescription="收藏"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/tv_favorite_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="159"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />

                </LinearLayout>

                <!-- 评论 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_comment"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:tint="#FFFFFFFF"
                        android:contentDescription="评论"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="43"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

