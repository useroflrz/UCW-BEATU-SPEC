<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000">

    <!-- 图片区域（支持多图轮播），仅占中间内容区，避免顶到底部导航 -->

    <!-- 图片轮播区域 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="220dp" />

    <!-- 首帧遮罩：仅用于首次进入时，先稳定展示第一张图，避免 ViewPager2 预布局阶段短暂露出错误页 -->
    <ImageView
        android:id="@+id/iv_first_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="220dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="18dp"
        tools:ignore="RtlSymmetry">

        <!-- 顶部页码指示（图文特有） -->
        <TextView
            android:id="@+id/tv_page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/3"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp"
            android:background="#66000000"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginBottom="8dp" />

        <!-- 绿色层：集数 / 合集 / 标题（与视频底部区域保持一致） -->
        <LinearLayout
            android:id="@+id/layout_top_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 集数信息 -->
            <TextView
                android:id="@+id/tv_episode_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/3集"
                android:textSize="18sp"
                android:textColor="#FFFFEB3B"
                android:textStyle="bold" />

            <!-- 合集信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_play"
                    android:tint="#FF2196F3"
                    android:contentDescription="合集" />

                <TextView
                    android:id="@+id/tv_collection_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合集:切腹 共2集"
                    android:textSize="14sp"
                    android:textColor="#FF2196F3"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- 标题 -->
            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="这是一个图文+BGM 示例"
                android:textSize="14sp"
                android:textColor="#FFFFFFFF"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- 图文进度条（替代视频进度条），用细长条展示当前页 / 总页数 -->
        <LinearLayout
            android:id="@+id/layout_page_progress"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical" />

        <!-- 蓝色层：作者信息 + 互动区（完全复用视频布局风格） -->
        <LinearLayout
            android:id="@+id/layout_bottom_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <!-- 左侧：作者头像 + 名称 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/iv_channel_avatar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_avatar_placeholder"
                        android:scaleType="centerCrop" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BeatU 官方"
                    android:textSize="14sp"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>

            <!-- 点赞 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_interaction_like"
                    android:tint="#FFFFFFFF"
                    android:contentDescription="点赞" />

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>

            <!-- 分享 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_interaction_share"
                    android:tint="#FFFFFFFF"
                    android:contentDescription="分享" />

                <TextView
                    android:id="@+id/tv_share_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>

            <!-- 收藏 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/iv_favorite"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_interaction_favorite"
                    android:tint="#FFFFFFFF"
                    android:contentDescription="收藏" />

                <TextView
                    android:id="@+id/tv_favorite_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>

            <!-- 评论 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_interaction_comment"
                    android:tint="#FFFFFFFF"
                    android:contentDescription="评论" />

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>


