<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000">

    <!-- 全屏视频播放器（视频内容使用）
         使用 texture_view 替代 surface_view，以获得更好的横竖屏切换体验：
         - TextureView 的 Surface 生命周期更可控，与 Fragment 生命周期同步
         - 横竖屏切换时 Surface 的重新初始化更快，减少黑屏时间
         - 统一横竖屏实现，降低维护成本
         - 性能损失在可接受范围内（5-10%），用户体验提升明显 -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:surface_type="texture_view"
        app:use_controller="false"
        app:resize_mode="fit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 图文内容容器：全屏图片轮播，用于"图文+音乐"场景 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/image_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="gone" />

    <!-- 通用视频控制视图：播放覆盖层 + 底部完整信息区（集数/标题/进度/点赞等） -->
    <com.ucw.beatu.shared.designsystem.widget.VideoControlsView
        android:id="@+id/video_controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 用户信息覆盖层（点击头像后显示在下半部分，复用 UserProfileFragment） -->
    <!-- 注意：不在此处指定 android:name，而是在代码中通过反射动态创建 Fragment，避免编译时循环依赖 -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/user_info_overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/player_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 倍速调节覆盖层（放在最后确保在最上层） -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/speed_control_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#00000000"
        android:elevation="20dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 顶部倍速提示气泡 -->
        <TextView
            android:id="@+id/tv_speed_indicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/speed_indicator_background"
            android:text="2 倍速播放中"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:elevation="22dp"
            android:visibility="visible"
            android:alpha="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_default="wrap"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp" />

        <!-- 底部锁定区域 -->
        <LinearLayout
            android:id="@+id/ll_lock_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_lock"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_lock_lock"
                android:tint="#FF666666"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_lock_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拖到此处锁定 2 倍速"
                android:textColor="#FF666666"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


