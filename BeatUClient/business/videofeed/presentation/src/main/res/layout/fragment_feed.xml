<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000">

    <!-- 视频播放区域 - 全屏背景 -->
    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 视频占位符 -->
        <TextView
            android:id="@+id/tv_video_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频1"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#4DFFFFFF"
            android:letterSpacing="0.02"
            android:layout_gravity="center" />

    </FrameLayout>

    <!-- 顶部导航栏 - 浮在视频上方 -->
    <LinearLayout
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tab 容器 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:layout_marginEnd="16dp">

            <!-- 关注按钮 -->
            <TextView
                android:id="@+id/btn_follow"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="关注"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#CCFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

            <!-- 推荐按钮 -->
            <TextView
                android:id="@+id/btn_recommend"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="推荐"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#CCFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <!-- 我按钮 -->
            <TextView
                android:id="@+id/btn_me"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="我"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#CCFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

        </LinearLayout>

        <!-- 搜索图标 -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                android:contentDescription="搜索"
                android:layout_gravity="center"
                app:tint="#FFFFFFFF" />

        </FrameLayout>

    </LinearLayout>

    <!-- 视频简介卡片 - 浮在视频上方 -->
    <LinearLayout
        android:id="@+id/video_description_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="14dp"
        android:paddingEnd="20dp"
        android:paddingBottom="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_interaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_video_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1.25"
            android:maxLines="2"
            android:text="这是一段精彩的视频内容简介..."
            android:textColor="#FFFFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 底部交互栏 - 浮在视频上方 -->
    <LinearLayout
        android:id="@+id/bottom_interaction"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#00000000"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 头像容器 -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:background="@drawable/bg_avatar_border" />

            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bg_add_icon"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/iv_add_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_input_add"
                    android:scaleType="fitCenter"
                    app:tint="#FFFFFFFF" />

            </FrameLayout>

        </FrameLayout>

        <!-- 用户信息 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFFFF"
                android:letterSpacing="0.01" />

        </LinearLayout>

        <!-- 互动按钮组 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <!-- 点赞 -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_interaction_button"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@android:drawable/btn_star_big_on"
                    android:contentDescription="点赞"
                    android:layout_gravity="center"
                    app:tint="#FFFFFFFF" />

            </FrameLayout>

            <!-- 收藏 -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_interaction_button"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_favorite"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@android:drawable/star_big_on"
                    android:contentDescription="收藏"
                    android:layout_gravity="center"
                    app:tint="#FFFFFFFF" />

            </FrameLayout>

            <!-- 评论 -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_interaction_button"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:contentDescription="评论"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#FFFFFFFF" />

            </FrameLayout>

            <!-- 分享 -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_interaction_button"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@android:drawable/ic_menu_share"
                    android:contentDescription="分享"
                    android:layout_gravity="center"
                    app:tint="#FFFFFFFF" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

