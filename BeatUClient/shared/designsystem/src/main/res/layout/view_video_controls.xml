<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 播放按钮覆盖层（由状态控制显示/隐藏） -->
    <ImageView
        android:id="@+id/iv_play_button_overlay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/selector_play_button"
        android:contentDescription="播放"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- 底部信息+互动区（包含你截图中的绿色层+蓝色层） -->
    <LinearLayout
        android:id="@+id/layout_bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="18dp"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent">

        <!-- 绿色层：标题 -->
        <LinearLayout
            android:id="@+id/layout_top_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 横屏按钮：位于标题上方右侧 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_fullscreen"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/selector_fullscreen"
                    android:tint="#FFFFFFFF"
                    android:contentDescription="横屏"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- 视频标题 -->
            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#FFFFFFFF"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- 红色层：进度条容器（位于绿色层和蓝色层之间） -->
        <!-- 将进度条宽度统一与底部互动区保持一致：整体左右内边距 16dp，由父布局提供；
             这里不再额外裁切 paddingEnd，保证与图文页的 page_progress 同宽。 -->
        <LinearLayout
            android:id="@+id/layout_seek_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_progress_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="00:00 / 00:00"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/progress_playback"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:max="1000"
                android:progress="0"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:thumb="@drawable/bg_seek_thumb_circle"
                android:thumbOffset="8dp"
                android:splitTrack="false" />
        </LinearLayout>

        <!-- 蓝色层：频道信息 + 点赞/收藏/评论/分享（作者头像所在行） -->
        <LinearLayout
            android:id="@+id/layout_bottom_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 左侧：头像 + 频道名 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/iv_channel_avatar"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_avatar_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@drawable/bg_avatar_circle"
                            android:clipToOutline="true" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_channel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="云哥讲电影"
                        android:textSize="14sp"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <!-- 右侧：互动按钮（按“点赞 → 收藏 → 评论 → 分享”顺序展示，均为图标 + 数字） -->

                <!-- 1. 点赞 like -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/selector_like"
                        android:tint="#FFFFFFFF"
                        android:contentDescription="点赞"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <!-- 2. 收藏 favorite -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/iv_favorite"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/selector_favorite"
                        android:tint="#FFFFFFFF"
                        android:contentDescription="收藏"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/tv_favorite_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <!-- 3. 评论 comment -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/iv_comment"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/selector_comment"
                        android:tint="#FFFFFFFF"
                        android:contentDescription="评论"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <!-- 4. 分享 share -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/selector_share"
                        android:tint="#FFFFFFFF"
                        android:contentDescription="分享"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/tv_share_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</merge>


